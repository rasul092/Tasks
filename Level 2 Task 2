#include <iostream>
using namespace std;
int main() {
    int n1;
    cout << "Bir ədəd daxil edin: ";
    cin >> n1;
    if (n1>0) {
        cout << "Ədəd müsbətdir" << endl;
    } else if (n1<0) {
        cout << "Ədəd mənfidir"<< endl;
    } else {
        cout << "Ədəd 0-dır." << endl;
    }
    return 0;
}
